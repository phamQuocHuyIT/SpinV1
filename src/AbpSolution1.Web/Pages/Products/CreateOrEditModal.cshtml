@page
@using AbpSolution1.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model AbpSolution1.Web.Pages.Products.CreateOrEditModalModel
@inject IStringLocalizer<AbpSolution1Resource> L
@{
    Layout = null;
}

<abp-script src="/Pages/Products/createOrEdit.js" />
<abp-dynamic-form abp-model="Product" asp-page="/Products/CreateOrEditModal">
    <abp-modal>
        <abp-modal-header title="@(Model.Id.HasValue? L["Edit"] : L["Create"]).Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>