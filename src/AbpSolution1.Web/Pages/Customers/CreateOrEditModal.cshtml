@page
@using AbpSolution1.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model AbpSolution1.Web.Pages.Customers.CreateOrEditModalModel
@inject IStringLocalizer<AbpSolution1Resource> L
@{
    Layout = null;
}
<abp-script src="/Pages/Customers/createOrEdit.js" />

<abp-dynamic-form abp-model="Customer" asp-page="/Customers/CreateOrEditModal">
    <abp-modal>
        <abp-modal-header title="@(Model.Id.HasValue? L["Edit"] : L["Create"]).Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content>
                <div class="form-group mt-3">
                    <label>@L["Gender"]</label>
                    <select asp-for="@Model.GenderStatus"
                            class="form-control"
                            asp-items="Model.Gender">
                        <option value="">-- @L["SelectGender"] --</option>
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label>@L["Ranked"]</label>
                    <select asp-for="@Model.RankesStatus"
                            class="form-control"
                            asp-items="Model.Ranked">
                        <option value="">-- @L["SelectGender"] --</option>
                    </select>
                </div>
            </abp-form-content>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>